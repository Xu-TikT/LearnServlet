<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>ServletTest</servlet-name>
        <servlet-class>webservlet.ServletTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletTest</servlet-name>
        <url-pattern>/webservlet/ServletTest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletTwo</servlet-name>
        <servlet-class>webservlet.ServletTwo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletTwo</servlet-name>
        <url-pattern>/webservlet/ServletTwo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletLifeTest1</servlet-name>
        <servlet-class>webservlet.ServletLifeTest1</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLifeTest1</servlet-name>
        <url-pattern>/webservlet/ServletLifeTest1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletLifeTest2</servlet-name>
        <servlet-class>webservlet.ServletLifeTest2</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLifeTest2</servlet-name>
        <url-pattern>/webservlet/ServletLifeTest2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegServlet</servlet-name>
        <servlet-class>webservlet.RegServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegServlet</servlet-name>
        <url-pattern>/webservlet/RegServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>servletpathdirection.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <!--url-pattern处必须毅/开头，这里的/表示项目的根目录-->
        <url-pattern>/servletpathdirection/HelloServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>servletpathdirection.TestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/servletpathdirection/TestServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servletlogin.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/servletlogin/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetInitParameterServlet</servlet-name>
        <servlet-class>servletGetInitParameter.GetInitParameterServlet</servlet-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>123456</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetInitParameterServlet</servlet-name>
        <url-pattern>/servletGetInitParameter/GetInitParameterServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>servletCart.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/servletCart/CartServlet</url-pattern>
    </servlet-mapping>
</web-app>